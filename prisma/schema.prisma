generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Games {
  id                  String       @id @default(auto()) @map("_id") @db.ObjectId
  name                String       @unique
  category            String
  linkedTournaments   String[]
  profile             String
  gameBannerPhoto     String
}

